
let contador = 0;
var resultado = 0;
let MinhaEscolha = prompt('Pedra, Papel ou Tesoura?');
var Computador = Math.floor(Math.random() *3) +1;

if(Computador == 1){
  contador = 'Pedra';
} else if (Computador == 2){
  contador = 'Papel';
} else if (Computador == 3){
  contador = 'Tesoura';
}

if (MinhaEscolha == 'Pedra' && contador == 'Pedra'){
      console.log('O resultado é empate!');
} else if (MinhaEscolha == 'Pedra' && contador == 'Papel'){
         resultado += resultado +1;
        console.log('Papel embrulha Pedra');
} else if (MinhaEscolha == 'Pedra' && contador == 'Tesoura'){
         resultado += resultado +1;
      console.log('Pedra esmaga tesoura!');
} else if (MinhaEscolha == 'Papel' && contador == 'Papel'){
      console.log('O resultado é empate');
} else if (MinhaEscolha == 'Papel' && contador == 'Tesoura'){
         resultado += resultado +1;
      console.log('Tesoura corta papel');
} else if (MinhaEscolha == 'Papel' && contador == 'Pedra'){
         resultado += resultado +1;
      console.log('Papel ganha de pedra!');
} else if (MinhaEscolha == 'Tesoura' && contador == 'Tesoura'){
      console.log('O resultado é empate');
} else if (MinhaEscolha == 'Tesoura' && contador == 'Pedra'){
         resultado += resultado +1;
} else if (MinhaEscolha == 'Tesoura' && contador == 'Papel'){
         resultado += resultado +1;
}
  console.log('O maior vencedor das rodadas é: ' + resultado);





